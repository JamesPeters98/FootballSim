package com.james;

public class Team {
	
	String name;
	double attack;
	double defence;
	
	public Team(String name, double attack, double defence){
		this.name = name;
		this.attack = ratioToProbability(attack);
		this.defence = ratioToProbability(defence);
	}
	
	public double ratioToProbability(double ratio){
		return Math.sqrt(Math.exp(ratio)/Math.E);
	}

}
