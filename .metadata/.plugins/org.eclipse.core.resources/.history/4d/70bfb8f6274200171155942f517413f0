package com.james;

public class Team {
	
	String name;
	double attack;
	double defence;
	
	double penalites;
	double freekicks;
	
	public Team(String name, double attack, double defence, double pens, double freekicks){
		this.name = name;
		this.attack = ratioToProbability(attack);
		this.defence = ratioToProbability(defence);
		this.penalites = pens;
		this.freekicks = freekicks;
	}
	
	private double ratioToProbability(double ratio){
		return Math.sqrt(Math.exp(ratio)/Math.E);
	}

}
