package com.james;

import java.util.LinkedList;
import java.util.List;

import uk.co.codeecho.fixture.generator.Fixture;
import uk.co.codeecho.fixture.generator.FixtureGenerator;

public class Game {
	
	public static void main(String[] args){
		//MatchSim.runMatch(Teams.CHELSEA,Teams.LIVERPOOL,1);
		
		FixtureGenerator<Team> fixtureGenerator = new FixtureGenerator<Team>();
		List<Team> teams = new LinkedList<Team>();
		teams.add(Teams.CHELSEA);
		teams.add(Teams.LIVERPOOL);
		teams.add(Teams.TOTTENHAM);
		teams.add(Teams.MAN_CITY);
		List<List<Fixture<Team>>> rounds = fixtureGenerator.getFixtures(teams, true);
		for(int i=0; i<rounds.size(); i++){
		    System.out.println("Round " + (i+1));
		    List<Fixture<Team>> round = rounds.get(i);
		    for(Fixture<Team> fixture: round){
		        //System.out.println(fixture.getHomeTeam().name + " vs " + fixture.getAwayTeam().name);
		        MatchSim.runMatch(fixture.getHomeTeam(),fixture.getHomeTeam(),1);
		    }
		    System.out.println("");
		}
	}

}
