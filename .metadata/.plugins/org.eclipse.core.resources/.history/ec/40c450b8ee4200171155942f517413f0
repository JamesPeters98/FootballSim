package com.james;

import java.io.Console;

public class Utils {

	public static void waitForEnter(String message, Object... args) {
	    Console c = System.console();
	    if (c != null) {
	        // printf-like arguments
	        if (message != null)
	            c.format(message, args);
	        c.format("\nPress ENTER to proceed.\n");
	        c.readLine();
	    }
	}
}
